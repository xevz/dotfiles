! Macros {{{

#define ISO_ENCODING        iso8859-1
#define UTF8_ENCODING       iso10646-1

#define TERMINAL_FONT      -*-fixed-medium-*-*-*-12-*-*-*-*-*-*
#define TERMINAL_BOLD_FONT -*-fixed-bold-*-*-*-12-*-*-*-*-*-*

!#define TERMINAL_FONT       -xos4-terminus-medium-*-*-*-14-*-*-*-*-*
!#define TERMINAL_BOLD_FONT  -xos4-terminus-bold-*-*-*-14-*-*-*-*-*

!#define TERMINAL_FONT       -jmk-neep alt-medium-r-semicondensed--13-*-*-*-c-*
!#define TERMINAL_BOLD_FONT  -jmk-neep alt-bold-r-semicondensed--13-*-*-*-c-*

! }}}

! Terminal defaults {{{

*.color0:                    #212121
*.color1:                    #bf7276
*.color2:                    #86af80
*.color3:                    #968a38
*.color4:                    #3673b5
*.color5:                    #9a70b2
*.color6:                    #7abecc
*.color7:                    #dbdbdb
*.color8:                    #6692af
*.color9:                    #e5505f
*.color10:                   #87bc87
*.color11:                   #e0d95c
*.color12:                   #1b85d6
*.color13:                   #ad73ba
*.color14:                   #338eaa
*.color15:                   #f4f4f4
*.colorBD:                   #ffffff
*.foreground:                #bebebe
*.background:                #212121

*.boldMode:                  false
*.scrollBar:                 false
*.colorMode:                 on
*.dynamicColors:             on
*.highlightSelection:        true
*.eightBitInput:             false
*.metaSendsEscape:           true
*.oldXtermFKeys:             true
*.loginShell:                true

*.font:                      TERMINAL_FONT-ISO_ENCODING
*.boldFont:                  TERMINAL_BOLD_FONT-ISO_ENCODING

! }}}

! XTerm {{{


! }}}

! uxterm {{{

UXTerm*font:                TERMINAL_FONT-UTF8_ENCODING
UXTerm*boldFont:            TERMINAL_BOLD_FONT-UTF8_ENCODING

! }}}

! urxvt {{{

URxvt.font:                 TERMINAL_FONT-ISO_ENCODING,TERMINAL_FONT-UTF8_ENCODING
URxvt.boldFont:             TERMINAL_BOLD_FONT-ISO_ENCODING,TERMINAL_BOLD_FONT-UTF8_ENCODING

URxvt.perl-ext-common:      default,matcher,url-select
URxvt.perl-lib:             .urxvt
URxvt.keysym.C-u:           perl:url-select:select_next
URxvt.urlLauncher:          google-chrome
URxvt.matcher.button:       1

! }}}

XLock.mode: blank

